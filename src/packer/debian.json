{
  "builders": [
    {
      "type": "virtualbox-iso",
      "name": "virtualbox",
      "vm_name": "{{ user `hostname` }}",

      "format": "ova",
      "guest_os_type": "Debian_64",
      "guest_additions_mode": "attach",
      "disk_size": 40960,
      "hard_drive_interface": "sata",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_url": "{{ user `iso_checksum_url` }}",
      "iso_checksum_type":  "{{ user `iso_checksum_type` }}",
      "iso_url":  "{{ user `iso_url` }}",
      "http_directory": "{{ template_dir }}",
      "ssh_username": "op",
      "ssh_password": "op",
      "ssh_wait_timeout": "40m",
      "shutdown_command": "echo 'op' | sudo -S halt -p",
      "headless": "{{ user `headless` }}",
      "boot_wait": "5s",
      "boot_command": [
        "<esc><wait>",
        "auto url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `codename` }}.cfg ",
        "debconf/frontend=noninteractive ",
        "hostname={{ .Name }} ",
        "passwd/user-fullname=Op ",
        "passwd/username=op ",
        "passwd/user-password=op ",
        "passwd/user-password-again=op ",
        "<enter>"
      ],
      "vboxmanage": [
        ["modifyvm", "{{ .Name }}", "--memory", "1024"],
        ["modifyvm", "{{ .Name }}", "--cpus", "1"     ],
        ["modifyvm", "{{ .Name }}", "--vram", "16"    ],
        ["modifyvm", "{{ .Name }}", "--audio", "none" ],
        ["modifyvm", "{{ .Name }}", "--mouse", "ps2"  ]
      ]
    },

    {
      "type": "qemu",
      "name": "kvm",
      "vm_name": "{{ user `hostname` }}",

      "format": "qcow2",
      "accelerator": "kvm",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "disk_size": 40960,
      "disk_compression": true,
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_url": "{{ user `iso_checksum_url` }}",
      "iso_checksum_type":  "{{ user `iso_checksum_type` }}",
      "iso_url":  "{{ user `iso_url` }}",
      "http_directory": "{{ template_dir }}",
      "ssh_username": "op",
      "ssh_password": "op",
      "ssh_wait_timeout": "40m",
      "shutdown_command": "echo 'op' | sudo -S halt -p",
      "headless": "{{ user `headless` }}",
      "boot_wait": "5s",
      "boot_command": [
        "<esc><wait>",
        "auto url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `codename` }}.cfg ",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "passwd/user-fullname=Op ",
        "passwd/username=op ",
        "passwd/user-password=op ",
        "passwd/user-password-again=op ",
        "<enter>"
      ],
      "qemuargs": [
        ["-m", "1024M"],
        ["-smp", "1"  ]
      ]
    },

    {
      "type": "vmware-iso",
      "name": "vmware",
      "vm_name": "{{ user `hostname` }}",

      "guest_os_type": "debian9-64",
      "tools_upload_flavor": "linux",
      "disk_size": 40960,
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_url": "{{ user `iso_checksum_url` }}",
      "iso_checksum_type":  "{{ user `iso_checksum_type` }}",
      "iso_url":  "{{ user `iso_url` }}",
      "http_directory": "{{ template_dir }}",
      "ssh_username": "op",
      "ssh_password": "op",
      "ssh_wait_timeout": "40m",
      "shutdown_command": "echo 'op' | sudo -S halt -p",
      "headless": "{{ user `headless` }}",
      "boot_wait": "5s",
      "boot_command": [
        "<esc><wait>",
        "auto url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `codename` }}.cfg ",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "passwd/user-fullname=Op ",
        "passwd/username=op ",
        "passwd/user-password=op ",
        "passwd/user-password-again=op ",
        "<enter>"
      ],
      "vmx_data": {
        "memsize": "1024",
        "numvcpus": "1"
      }
    },

    {
      "type": "lxc",
      "name": "lxc",
      "container_name": "{{ user `hostname` }}",

      "template_name": "debian",
      "template_parameters": [
        "--release", "{{ user `codename` }}",
        "--arch", "{{ user `arch` }}"
      ],
      "attach_options": ["--clear-env"],
      "config_file": "/usr/share/lxc/config/debian.common.conf"
    },

    {
      "type": "null",

      "ssh_host": "localhost",
      "ssh_username": "op",
      "ssh_password": "op",
      "ssh_port": 2222
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "except": ["lxc"],

      "execute_command": "echo op | {{ .Vars }} sudo -E -S bash {{ .Path }}",
      "environment_vars": ["LC_ALL=C", "BUILD={{ user `build` }}"],

      "script": "{{ user `medley_path` }}/{{ user `medley` }}.sh"
    },

    {
      "type": "shell",
      "only": ["lxc"],

      "execute_command": "{{ .Vars }} bash {{ .Path }}",
      "environment_vars": ["DEBIAN_FRONTEND=noninteractive", "LC_ALL=C"],

      "inline": [
        "while ! ip route get 1.1.1.1 &>/dev/null; do sleep 0.1; done",
        "apt-get -y update",
        "apt-get -y install --no-install-recommends curl ca-certificates sudo ssh"
      ]
    },
    {
      "type": "shell",
      "only": ["lxc"],

      "execute_command": "{{ .Vars }} bash {{ .Path }}",
      "environment_vars": ["LC_ALL=C", "BUILD={{ user `build` }}"],

      "script": "{{ user `medley_path` }}/{{ user `medley` }}.sh"
    }
  ],

  "post-processors": [
    {
      "type": "vagrant",

      "output": "{{ user `boxname` }}_{{ user `build` }}_{{ .BuildName }}.box",
      "vagrantfile_template": "{{ template_dir }}/vagrantfile.rb"
    }
  ],

  "variables": {
    "boxname": "debian-stable-minimal",
    "hostname": "minimal",
    "distribution": "debian",
    "suite": "stable",
    "codename": "stretch",
    "arch": "amd64",
    "medley": "minimal",
    "medley_url": "https://scripts.omu.sh",
    "medley_path": "../../srv/scripts",
    "build": "{{ isotime \"060102150405\" }}",
    "headless": "true",

    "iso_checksum": "",
    "iso_checksum_type": "none",
    "iso_checksum_url": "",
    "iso_url": "none"
  }
}
